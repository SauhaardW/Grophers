<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/productCardOwner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:backgroundTint="@color/white"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

         <ImageView
            android:id="@+id/imageViewproductCardOwner"
            android:layout_width="72dp"
            android:layout_height="78dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="6dp"
             android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/imageofproductnatrelmilk" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/productNameText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Natrel Milk"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textViewProductPrice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="$2.97"
                android:textColor="@color/lightGrayForText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="125dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/editButtonProductOwner"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:text="edit"
                android:background="@drawable/login_rectangle_green"
                android:backgroundTint="@color/OwnerOrange"
                app:backgroundTint="@color/OwnerOrange"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/amountOfProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginStart="45dp"
                android:text="x1"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textViewProductPrice3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="5dp"
                android:text="$2.97 total"
                android:textColor="@color/lightGrayForText" />
        </LinearLayout>


    </LinearLayout>





</androidx.cardview.widget.CardView>