<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OwnerProductListActivity">

    <ImageView
        android:id="@+id/grofersIcon"
        android:layout_width="62dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/grofersicon" />

    <ImageView
        android:id="@+id/productInfoBox"
        android:layout_width="345dp"
        android:layout_height="141dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="392dp"
        app:layout_constraintBottom_toTopOf="@+id/createProductButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grofersIcon"
        app:srcCompat="@drawable/poductinfobox" />

    <ImageView
        android:id="@+id/ProductPic"
        android:layout_width="67dp"
        android:layout_height="65dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/productInfoBox"
        app:layout_constraintEnd_toStartOf="@+id/ProductName"
        app:layout_constraintHorizontal_bias="0.315"
        app:layout_constraintStart_toStartOf="@+id/productInfoBox"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/natrelmilkpic" />

    <TextView
        android:id="@+id/ProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Natrel Milk"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/productInfoBox"
        app:layout_constraintEnd_toEndOf="@+id/productInfoBox"
        app:layout_constraintHorizontal_bias="0.379"
        app:layout_constraintStart_toStartOf="@+id/productInfoBox"
        app:layout_constraintTop_toTopOf="@+id/productInfoBox"
        app:layout_constraintVertical_bias="0.278" />

    <TextView
        android:id="@+id/numProducts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="x1"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/productTotal"
        app:layout_constraintEnd_toEndOf="@+id/productInfoBox"
        app:layout_constraintHorizontal_bias="0.924"
        app:layout_constraintStart_toEndOf="@+id/ProductPic"
        app:layout_constraintTop_toBottomOf="@+id/editButtonProduct"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/ProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:text="$2.97"
        android:textColor="@color/light_gray"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/productInfoBox"
        app:layout_constraintEnd_toStartOf="@+id/productTotal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ProductPic"
        app:layout_constraintTop_toTopOf="@+id/ProductName"
        app:layout_constraintVertical_bias="0.048" />

    <TextView
        android:id="@+id/productTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="right"
        android:text="$2.97 total"
        android:textColor="@color/light_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/productInfoBox"
        app:layout_constraintEnd_toEndOf="@+id/productInfoBox"
        app:layout_constraintHorizontal_bias="0.819"
        app:layout_constraintStart_toEndOf="@+id/ProductName"
        app:layout_constraintTop_toBottomOf="@+id/editButtonProduct"
        app:layout_constraintVertical_bias="0.048" />

    <ImageButton
        android:id="@+id/editButtonProduct"
        android:layout_width="66dp"
        android:layout_height="18dp"
        android:background="@drawable/editbuttonbackground"
        app:layout_constraintBottom_toBottomOf="@+id/productInfoBox"
        app:layout_constraintEnd_toEndOf="@+id/productInfoBox"
        app:layout_constraintHorizontal_bias="0.825"
        app:layout_constraintStart_toEndOf="@+id/ProductName"
        app:layout_constraintTop_toTopOf="@+id/productInfoBox"
        app:layout_constraintVertical_bias="0.298"
        app:srcCompat="@drawable/editbuttonbackground"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/editLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Edit"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/numProducts"
        app:layout_constraintEnd_toEndOf="@+id/editButtonProduct"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="@+id/editButtonProduct"
        app:layout_constraintTop_toTopOf="@+id/productInfoBox"
        app:layout_constraintVertical_bias="0.076" />

    <ImageButton
        android:id="@+id/createProductButton"
        android:layout_width="366dp"
        android:layout_height="44dp"
        android:background="@drawable/rounded_corner_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productInfoBox"
        app:layout_constraintVertical_bias="0.965"
        app:srcCompat="@drawable/createproductbutton"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/createProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="668dp"
        android:gravity="center"
        android:text="Create Product"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Products"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/ProductName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.022"
        app:layout_constraintStart_toStartOf="@+id/productInfoBox" />

</androidx.constraintlayout.widget.ConstraintLayout>