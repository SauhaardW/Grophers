<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginOwnerActivity">

    <include
        android:id="@+id/include2"
        layout="@layout/topbar_back_button_owner"
        android:layout_width="410dp"
        android:layout_height="78dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="172dp"
        android:text="Don't have an account?"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginSubmitOwner" />

    <TextView
        android:id="@+id/storeName7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Password"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/editTextPasswordOwnerLogin"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmailOwnerLogin" />

    <TextView
        android:id="@+id/storeName8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="12dp"
        android:text="*"
        android:textColor="@color/OwnerOrange"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/storeName7"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmailOwnerLogin" />

    <TextView
        android:id="@+id/storeName3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="1dp"
        android:text="*"
        android:textColor="@color/OwnerOrange"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/storeName4"
        app:layout_constraintTop_toTopOf="@+id/storeName4" />

    <TextView
        android:id="@+id/storeName4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:text="Username"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/editTextEmailOwnerLogin"
        app:layout_constraintTop_toBottomOf="@+id/include2" />

    <EditText
        android:id="@+id/editTextPasswordOwnerLogin"
        android:layout_width="268dp"
        android:layout_height="45dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="101dp"
        android:background="@drawable/gettext"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storeName7"
        tools:ignore="TextContrastCheck" />

    <ProgressBar
        android:id="@+id/progressBarOwnerLogin"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginSubmitOwner"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/loginSubmitOwner"
        android:layout_width="165dp"
        android:layout_height="48dp"
        android:layout_marginStart="161dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="162dp"
        android:background="@drawable/login_rectangle_green"
        android:backgroundTint="@color/OwnerOrange"
        android:insetTop="5dp"
        android:insetBottom="10dp"
        android:text="Log In"
        app:backgroundTint="@color/OwnerOrange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPasswordOwnerLogin"
        tools:layout_marginBottom="29dp" />

    <Button
        android:id="@+id/registerButton2"
        android:layout_width="165dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/login_rectangle_green"
        android:backgroundTint="@color/OwnerOrange"
        android:insetTop="5dp"
        android:insetBottom="10dp"
        android:text="Register"
        app:backgroundTint="@color/OwnerOrange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_marginBottom="29dp" />

    <EditText
        android:id="@+id/editTextEmailOwnerLogin"
        android:layout_width="268dp"
        android:layout_height="45dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="101dp"
        android:background="@drawable/gettext"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storeName4"
        app:layout_goneMarginEnd="101dp" />
</androidx.constraintlayout.widget.ConstraintLayout>