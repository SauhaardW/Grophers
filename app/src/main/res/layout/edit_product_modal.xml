<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/limitForModalInvisibleEditProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="580dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/productPriceInput"
        android:layout_width="268dp"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/gettext"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productPrice" />

    <TextView
        android:id="@+id/productPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Price"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/productPriceInput"
        app:layout_constraintTop_toBottomOf="@+id/productTitleInput" />

    <EditText
        android:id="@+id/productTitleInput"
        android:layout_width="268dp"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/gettext"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productTitle" />

    <TextView
        android:id="@+id/productTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Product Title"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/productTitleInput"
        app:layout_constraintTop_toBottomOf="@+id/editImageOwner" />

    <Button
        android:id="@+id/editImageOwner"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_rectangle_green"
        android:backgroundTint="@color/OwnerOrange"
        android:insetTop="0dp"
        android:insetBottom="5dp"
        android:text="Edit image"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:backgroundTint="@color/OwnerOrange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productImageModalDisplay3"
        tools:layout_marginBottom="29dp" />

    <Button
        android:id="@+id/doneEditingProduct"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/login_rectangle_green"
        android:backgroundTint="@color/OwnerOrange"
        android:insetTop="0dp"
        android:insetBottom="5dp"
        android:text="Done"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:backgroundTint="@color/OwnerOrange"
        app:layout_constraintBottom_toBottomOf="@+id/limitForModalInvisibleEditProduct"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deleteProductOwner"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_marginBottom="29dp" />

    <Button
        android:id="@+id/deleteProductOwner"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/login_rectangle_green"
        android:backgroundTint="#F63737"
        android:insetTop="0dp"
        android:insetBottom="5dp"
        android:text="Delete Product"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:backgroundTint="#F63737"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productPriceInput"
        tools:layout_marginBottom="29dp" />

    <ImageView
        android:id="@+id/productImageModalDisplay3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/imageofproductnatrelmilk" />

</androidx.constraintlayout.widget.ConstraintLayout>