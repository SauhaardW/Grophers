<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraintLayoutEditProductModal">

    <TextView
        android:id="@+id/limitForModalInvisibleEditProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/doneEditingProduct" />

    <EditText
        android:id="@+id/productPriceInput"
        android:layout_width="268dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/gettext"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productPrice" />

    <TextView
        android:id="@+id/productPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Price"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.187"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productBrandInput" />

    <TextView
        android:id="@+id/ProductPriceAstreix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="*"
        android:textColor="@color/OwnerOrange"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/productPrice"
        app:layout_constraintTop_toTopOf="@+id/productPrice" />

    <EditText
        android:id="@+id/productNameInput"
        android:layout_width="268dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/gettext"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productName" />

    <TextView
        android:id="@+id/productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Product Name"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.221"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editImageOwner" />

    <TextView
        android:id="@+id/ProductNameAstreix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="*"
        android:textColor="@color/OwnerOrange"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/productBrand"
        app:layout_constraintTop_toTopOf="@+id/productBrand" />

    <EditText
        android:id="@+id/productBrandInput"
        android:layout_width="268dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/gettext"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productBrand" />

    <TextView
        android:id="@+id/productBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Product Brand"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.222"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productNameInput" />

    <TextView
        android:id="@+id/ProductBrandAstreix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="*"
        android:textColor="@color/OwnerOrange"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/productName"
        app:layout_constraintTop_toTopOf="@+id/productName" />

    <TextView
        android:id="@+id/editImageOwner"
        android:layout_width="74dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"

        android:insetBottom="5dp"
        android:insetTop="0dp"
        android:text="Edit Image"
        android:textAllCaps="false"
        android:textColor="@color/OwnerOrange"

        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productImageModalDisplay3"
        tools:layout_marginBottom="29dp" />

    <Button
        android:id="@+id/doneEditingProduct"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/login_rectangle_green"
        android:backgroundTint="@color/OwnerOrange"
        android:insetTop="0dp"
        android:insetBottom="5dp"
        android:text="Done"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:backgroundTint="@color/OwnerOrange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deleteProductOwner"
        tools:layout_marginBottom="29dp" />

    <TextView
        android:id="@+id/deleteProductOwner"
        android:layout_width="99dp"
        android:layout_height="22dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="#F63737"
        android:insetTop="0dp"
        android:insetBottom="5dp"
        android:text="Delete Product"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#F63737"
        android:textSize="15sp"
        app:backgroundTint="#F63737"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productPriceInput"
        tools:layout_marginBottom="29dp" />

    <ImageView
        android:id="@+id/productImageModalDisplay3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/imageofproductnatrelmilk" />

</androidx.constraintlayout.widget.ConstraintLayout>