<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginCustomerActivity">

    <include
        android:id="@+id/include"
        layout="@layout/topbar_back_button_customer"
        android:layout_width="411dp"
        android:layout_height="83dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="172dp"
        android:text="Don't have an account?"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginSubmitCustomer" />

    <EditText
        android:id="@+id/editTextEmailCustomerLogin"
        android:layout_width="268dp"
        android:layout_height="45dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="101dp"
        android:background="@drawable/gettext"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storeName" />

    <Button
        android:id="@+id/loginSubmitCustomer"
        android:layout_width="165dp"
        android:layout_height="48dp"
        android:layout_marginStart="161dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="162dp"
        android:background="@drawable/login_rectangle_green"
        android:backgroundTint="@color/CustomerGreen"
        android:insetTop="5dp"
        android:insetBottom="10dp"
        android:text="Log In"
        app:backgroundTint="@color/CustomerGreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPasswordCustomerLogin" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="165dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/login_rectangle_green"
        android:backgroundTint="@color/CustomerGreen"
        android:insetTop="5dp"
        android:insetBottom="10dp"
        android:text="Register"
        app:backgroundTint="@color/CustomerGreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ProgressBar
        android:id="@+id/progressBarCustomerLogin"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginSubmitCustomer"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/storeName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="*"
        android:textColor="@color/CustomerGreen"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/storeName"
        app:layout_constraintTop_toTopOf="@+id/storeName" />

    <TextView
        android:id="@+id/storeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="156dp"
        android:text="E-mail"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/editTextEmailCustomerLogin"
        app:layout_constraintTop_toBottomOf="@+id/include" />

    <TextView
        android:id="@+id/storeName6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:text="*"
        android:textColor="@color/CustomerGreen"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/storeName5"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmailCustomerLogin" />

    <EditText
        android:id="@+id/editTextPasswordCustomerLogin"
        android:layout_width="268dp"
        android:layout_height="45dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="101dp"
        android:background="@drawable/gettext"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storeName5" />

    <TextView
        android:id="@+id/storeName5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Password"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/editTextPasswordCustomerLogin"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmailCustomerLogin" />

</androidx.constraintlayout.widget.ConstraintLayout>