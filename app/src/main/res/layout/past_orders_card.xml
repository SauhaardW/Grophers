<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardpastOrders"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginTop="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:backgroundTint="@color/white"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewCustomerViewStorePhoto"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintHorizontal_bias="0.461"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/store_photo" />

        <LinearLayout
            android:layout_width="161dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pastOrderCardStoreName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Timmy's Ol' Reliable"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pastOrderCardSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friday, Nov 20 â€¢ CA$20"
                android:textAlignment="textStart" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewPastOrdersCustomerOrderStatus"
            android:layout_width="71dp"
            android:layout_height="19dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="bold" />
    </LinearLayout>


</androidx.cardview.widget.CardView>