<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayoutCustomerStoreProductView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerStoreProductViewActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toTopOf="@+id/storeNameDisplay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/storeprofilepic" />

    <TextView
        android:id="@+id/storeNameDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Timmy's Ol' Reliable"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/storeHoursDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="Open 9:00 AM-8:00PM"
        android:textColor="@color/lightGrayForText"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/editTextStoreProductSearch"
        android:layout_width="361dp"
        android:layout_height="31dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/searchstoreproducts"
        android:ems="10"
        android:hint="Search Timmy's Ol' Reliable"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="@color/lightGrayForText"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storeHoursDisplay"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="42dp"
        android:backgroundTint="@color/CustomerGreen"
        app:layout_constraintBottom_toBottomOf="@+id/editTextStoreProductSearch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/storeHoursDisplay"
        app:srcCompat="@drawable/lineforownerstoreview" />

    <TextView
        android:id="@+id/productTextDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="6dp"
        android:text="Products"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewProductCustomer"
        app:layout_constraintStart_toStartOf="@+id/editTextStoreProductSearch"
        app:layout_constraintTop_toBottomOf="@+id/editTextStoreProductSearch" />

    <Button
        android:id="@+id/button"
        android:layout_width="27dp"
        android:layout_height="36dp"
        android:layout_marginTop="28dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/editTextStoreProductSearch"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintStart_toStartOf="@+id/editTextStoreProductSearch"
        app:layout_constraintTop_toBottomOf="@+id/storeHoursDisplay"
        app:strokeColor="#00FFFFFF"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/magnifyingGlassIcon"
        android:layout_width="14dp"
        android:layout_height="28dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@+id/editTextStoreProductSearch"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintStart_toStartOf="@+id/editTextStoreProductSearch"
        app:layout_constraintTop_toBottomOf="@+id/storeHoursDisplay"
        app:srcCompat="@drawable/searchicon" />

    <Button
        android:id="@+id/shoppingCartInvisibleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="71dp"
        android:layout_height="37dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/cart_background" />

    <TextView
        android:id="@+id/numProductsInCart"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navViewCustomerStoreProductView"
        app:menu="@menu/nav_menu_customer"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"/>

</androidx.drawerlayout.widget.DrawerLayout>