<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardCartItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:backgroundTint="@color/white"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewCustomerViewStorePhoto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            app:layout_constraintHorizontal_bias="0.461"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/product_image" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewCustomerViewStoreName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:text="Natrel Milk"
                android:textSize="18sp"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/textViewCustomerViewStoreTimings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$2.97"
                android:textSize="18sp"
                android:textAlignment="textStart" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="120dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/remove_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/red_rectangle"
                android:text="Remove"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/remove_button1"
                app:layout_constraintEnd_toEndOf="@+id/remove_button1"
                app:layout_constraintStart_toStartOf="@+id/remove_button1"
                app:layout_constraintTop_toTopOf="@+id/remove_button1" />

            <TextView
                android:id="@+id/quantity_of_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="20dp"
                android:text="x1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/multiplied_product_price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:text="$2.97 total" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>